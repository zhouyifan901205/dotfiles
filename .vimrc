filetype plugin indent on

set tabstop=4 shiftwidth=4 expandtab
set softtabstop=4
set autoindent
set wrap linebreak nolist
set formatoptions+=t
set wrapmargin=0

set nu
set hlsearch
set incsearch
set colorcolumn=80

set ignorecase
set smartcase

set laststatus=2
set noswapfile nobackup

colorscheme desert
syntax on
